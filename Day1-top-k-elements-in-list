Code tweaks-

class Solution {
public:
    vector<int> topKFrequent(vector<int>& nums, int k) {
        unordered_map<int, int> count;
        vector<vector<int>> freq(nums.size() + 1);

        //1,2,2,3,3,3
        //1->1,2->2,3->3

        for (int n : nums) {
            count[n] = 1 + count[n];
        }

        //++Check code flow
        for(auto& entry1 : count){
            cout<<entry1.first<<"->"<<entry1.second<<std::endl;
        }
        //--Check code flow
        
        for (const auto& entry : count) {
            freq[entry.second].push_back(entry.first);
        }
       
        vector<int> res;
        for (int i = freq.size() - 1; i > 0; --i) {
            //Check code flow
            cout<<"At i outer: "<<i<<std::endl;
            for (int n : freq[i]) {
                //Check code flow
                cout<<"At i inner: "<<i<<std::endl;
                res.push_back(n);
                if (res.size() == k) {
                    return res;
                }
            }
        }
        return res;
    }
};

