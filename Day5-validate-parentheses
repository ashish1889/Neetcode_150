My trial code-

class Solution {
public:
    bool isValid(string s) {
        stack<char> st;
        char temp;
        /*if(s[0] == ')'||s[0] == '}'||s[0] == ']')
        return false;*/

        for(char c: s)
        {
            if(c == '('||c == '{'|| c == '[')
              st.push(c);
            else if(!st.empty())
            {
                temp = st.top();
                st.pop();
                switch(temp){
                case '(':
                 if(c != ')')
                 return false;
                 break;
                 case '{':
                 if(c != '}')
                 return false;
                 break;
                 case '[':
                 if(c != ']')
                 return false;
                 break;
                 default:
                 return false;
                }

            }
            else
            return false;
        }

        return st.empty();
        
    }
};
